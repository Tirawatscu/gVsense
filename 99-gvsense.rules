# gVsense device rules
# Provides consistent device naming for gVsense MCU devices

# XIAO SAMD21 devices (Arduino-based)
SUBSYSTEM=="tty", ATTRS{idVendor}=="239a", ATTRS{idProduct}=="8019", SYMLINK+="gsense-xiao", GROUP="gvsense", MODE="0664"

# Generic USB serial devices that might be gVsense
SUBSYSTEM=="tty", ATTRS{interface}=="gVsense*", SYMLINK+="gsense-device", GROUP="gvsense", MODE="0664"

# Fallback for any USB serial device with gVsense in description
SUBSYSTEM=="tty", ENV{ID_SERIAL_SHORT}=="*gVsense*", SYMLINK+="gsense-fallback", GROUP="gvsense", MODE="0664"